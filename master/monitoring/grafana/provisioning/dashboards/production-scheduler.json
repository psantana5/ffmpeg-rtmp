{
  "dashboard": {
    "title": "Production Scheduler - FSM & Health",
    "tags": ["scheduler", "production", "fsm"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Scheduler Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "up{job=\"ffrtmp-master\"}",
          "legendFormat": "Master UP"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Workers",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "count(up{job=\"ffrtmp-workers\"} == 1)",
          "legendFormat": "Workers"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "title": "Total Jobs",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(ffrtmp_worker_heartbeats_total)",
          "legendFormat": "Heartbeats"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "title": "Active Jobs",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(ffrtmp_worker_active_jobs)",
          "legendFormat": "Active"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Worker CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "ffrtmp_worker_cpu_usage",
          "legendFormat": "Worker {{instance}}"
        }],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Worker Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "ffrtmp_worker_memory_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Worker {{instance}}"
        }],
        "yaxes": [
          {"format": "gbytes", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Heartbeat Activity",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 24, "h": 8},
        "targets": [{
          "expr": "rate(ffrtmp_worker_heartbeats_total[1m])",
          "legendFormat": "Worker {{instance}}"
        }],
        "yaxes": [
          {"format": "ops", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Worker Uptime",
        "type": "stat",
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 4},
        "targets": [{
          "expr": "ffrtmp_worker_uptime_seconds / 60",
          "legendFormat": "{{instance}}"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "m"
          }
        }
      },
      {
        "id": 9,
        "title": "Hardware Encoders Available",
        "type": "table",
        "gridPos": {"x": 8, "y": 20, "w": 16, "h": 4},
        "targets": [
          {
            "expr": "ffrtmp_worker_nvenc_available",
            "legendFormat": "NVENC",
            "format": "table"
          },
          {
            "expr": "ffrtmp_worker_qsv_available",
            "legendFormat": "QSV",
            "format": "table"
          },
          {
            "expr": "ffrtmp_worker_vaapi_available",
            "legendFormat": "VAAPI",
            "format": "table"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
