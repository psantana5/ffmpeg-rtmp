# FFmpeg-RTMP Worker Configuration
# Generated by Ansible

# Master connection
MASTER_URL={{ ffrtmp_master_url }}
API_KEY={{ ffrtmp_api_key | default('REPLACE_WITH_API_KEY') }}

# Worker settings
MAX_JOBS={{ ffrtmp_worker_max_jobs }}
HEARTBEAT_INTERVAL={{ ffrtmp_worker_heartbeat_interval }}
LOG_LEVEL={{ ffrtmp_worker_log_level }}

# Auto-attach
ENABLE_AUTO_ATTACH={{ ffrtmp_worker_enable_auto_attach | string | lower }}

# Metrics
METRICS_PORT={{ ffrtmp_worker_metrics_port }}

{% if enable_tls %}
# TLS Configuration
TLS_CA={{ ffrtmp_config_dir }}/certs/ca.crt
{% endif %}
