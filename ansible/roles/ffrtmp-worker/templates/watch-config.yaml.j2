# FFmpeg Watch Daemon Configuration
# Generated by Ansible

# Scan settings
scan_interval: {{ ffrtmp_watch_scan_interval }}

# Target commands to discover
target_commands:
  - ffmpeg
{% if install_gstreamer %}
  - gst-launch-1.0
{% endif %}

# Resource limits (per process)
cpu_quota: {{ ffrtmp_watch_cpu_quota }}
memory_limit: {{ ffrtmp_watch_memory_limit }}

# Reliability features
enable_retry: {{ ffrtmp_watch_enable_retry | string | lower }}
max_retry_attempts: {{ ffrtmp_watch_max_retry_attempts }}
enable_state: true
state_path: {{ ffrtmp_data_dir }}/watch-state.json
