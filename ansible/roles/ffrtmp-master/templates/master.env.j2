# FFmpeg-RTMP Master Configuration
# Generated by Ansible

# Server settings
PORT={{ ffrtmp_master_port }}
METRICS_PORT={{ ffrtmp_master_metrics_port }}

# Database
DATABASE_PATH={{ ffrtmp_master_db_path }}

# API Key
API_KEY_FILE={{ ffrtmp_master_api_key_file }}

# Logging
LOG_LEVEL={{ ffrtmp_master_log_level }}
LOG_DIR={{ ffrtmp_master_log_dir }}

{% if enable_tls %}
# TLS Configuration
TLS_ENABLED=true
TLS_CERT={{ ffrtmp_master_config_dir }}/certs/master.crt
TLS_KEY={{ ffrtmp_master_config_dir }}/certs/master.key
{% endif %}
