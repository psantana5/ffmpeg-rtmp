# Cost Exporter Configuration
# Energy and compute pricing for cost analysis

# Currency (SEK, USD, or EUR)
CURRENCY=SEK

# Energy cost per kWh in selected currency
# Stockholm, Sweden typical prices: 2.0 SEK/kWh (~0.18 EUR/kWh, ~0.20 USD/kWh)
# US average: 0.12-0.15 USD/kWh
# EU average: 0.20-0.30 EUR/kWh
ENERGY_COST_PER_KWH=2.0

# CPU/Instance cost per hour in selected currency
# AWS c5.xlarge equivalent: ~5.0 SEK/h (~0.085 USD/h, ~0.46 EUR/h)
CPU_COST_PER_HOUR=5.0

# GPU cost per hour (optional, for GPU-accelerated transcoding)
GPU_COST_PER_HOUR=0.0

# Example configurations for different regions:
# 
# Stockholm, Sweden (Default):
# CURRENCY=SEK
# ENERGY_COST_PER_KWH=2.0
# CPU_COST_PER_HOUR=5.0
#
# United States:
# CURRENCY=USD
# ENERGY_COST_PER_KWH=0.12
# CPU_COST_PER_HOUR=0.50
#
# European Union:
# CURRENCY=EUR
# ENERGY_COST_PER_KWH=0.25
# CPU_COST_PER_HOUR=0.75
