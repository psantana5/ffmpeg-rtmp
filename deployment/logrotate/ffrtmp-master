# Logrotate configuration for FFmpeg-RTMP master
# Install: sudo cp /deployment/logrotate/ffrtmp-master to /etc/logrotate.d/ffrtmp-master

/var/log/ffrtmp/master/*.log {
    # Rotate daily
    daily
    
    # Keep 14 days of logs
    rotate 14
    
    # Compress old logs
    compress
    delaycompress
    
    # Don't error if log is missing
    missingok
    
    # Don't rotate empty logs
    notifempty
    
    # Create new log with these permissions
    create 0644 ffrtmp ffrtmp
    
    # Run postrotate script only once for all logs
    sharedscripts
    
    # Reload service after rotation
    postrotate
        systemctl reload ffrtmp-master 2>/dev/null || true
    endscript
}
